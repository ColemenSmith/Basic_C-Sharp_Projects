        <dd>
          @*@Html.DisplayFor(model => model.Quote)*@
          @{
            double cost = 50;
            if (Model.DateOfBirth.Year > 1995)
            {
              cost += 25;
            }
            if (Model.DateOfBirth.Year > 2002)
            {
              cost += 100;
            }
            if (Model.DateOfBirth.Year < 1920)
            {
              cost += 25;
            }
            if (Model.CarYear < 2000)
            {
              cost += 25;
            }
            if (Model.CarYear > 2015)
            {
              cost += 25;
            }
            if (Model.CarMake == "Porsche")
            {
              cost += 25;
            }
            if (Model.CarMake == "Porsche" && Model.CarModel == "911 Carerra")
            {
              cost += 25;
            }
            cost += 10 * Model.SpeedingTickets;
            if (Model.DUI == true)
            {
              cost = cost + (cost * .25);
            }
            if (Model.FullCoverage == true)
            {
              cost = cost + (cost * .5);
            }
            
          }
          $@cost
        </dd>

